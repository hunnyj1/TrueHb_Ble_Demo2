<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">
    <TextView
        android:id="@+id/login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:text="TrueHb BLE"
        android:textColor="#fff"
        android:textSize="26sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/mainrel">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textColor="@color/buttoncolor"
                android:textSize="18sp"
                android:text="Device:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textSize="18sp"
                android:id="@+id/textdevice"
                android:textColor="@color/buttoncolor"
                android:text="NA"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Scan"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginRight="2dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:onClick="scan"
                android:background="@drawable/buttonshape"/>
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spindevice"
                android:spinnerMode="dialog"
                android:prompt="@string/device"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:textColor="#fff"
                android:textSize="18sp"
                android:id="@+id/btnconnect"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:onClick="connect"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="OFF"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    android:layout_marginRight="2dp"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:background="@drawable/buttonshape"
                    android:onClick="device_off"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Test"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:background="@drawable/buttonshape"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="2dp"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:onClick="test"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Read Batch Code"
                android:textColor="#fff"
                android:textSize="14sp"
                android:background="@drawable/buttonshape"
                android:layout_weight="0.5"
                android:layout_marginTop="2dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:onClick="readBatchCode"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Set Batch Code"
                android:textColor="#fff"
                android:textSize="14sp"
                android:background="@drawable/buttonshape"
                android:layout_weight="0.5"
                android:layout_marginTop="2dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:onClick="writeBatchCode"/>
        </LinearLayout>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Read All Test"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="@drawable/buttonshape"
                android:layout_weight="0.5"
                android:layout_marginTop="20dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"

                android:onClick="readLastTest"/>
        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/display"
        android:layout_below="@+id/mainrel"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp"
        android:textColor="@color/buttoncolor"
        android:textSize="12sp"
        android:scrollbars="vertical"
        android:editable="false"
        android:cursorVisible="false"
        android:background="#fff"/>

</RelativeLayout>
</ScrollView>